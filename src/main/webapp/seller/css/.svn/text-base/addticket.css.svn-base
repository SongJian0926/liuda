li input[type="checkbox"]:checked +span:before{
	background: #fff url("../images/true.png") no-repeat center center;
}
li input[type="checkbox"] + span{
	position: relative;
}
li input[type="checkbox"] +span:before{
	content: "";
	width: 15px;
	height: 15px;
	display: inline-block;
	vertical-align: 56px;
	margin-right: 10px;
	margin-left: -18px;
	background: #fff;
	border-radius: 0px;
	margin-top: -2px;
	border: 1px solid #c8c8c8;
}
